$x $y $z $value
*.fits
bind x
echo "$x $y $z $value" | $text

$x(fk5) $y(fk5) $z(wcs) $value
*.fits
bind y
echo "$x(fk5) $y(fk5) $z(wcs) $value" | $text

$x(wcs,fk5,hms) $y(wcs,fk5,hms) $z(wcs) $value
*.fits
bind z
echo "$x(wcs,fk5,hms) $y(wcs,fk5,hms) $z(wcs) $value" | $text

